# Blockchain Configuration
RPC_URL=https://rpc-mumbai.maticvigil.com
CHAIN_ID=80001
NETWORK_NAME=mumbai

# Contract Addresses (from deployment)
MODEL_REGISTRY_ADDRESS=0xYourModelRegistryAddress
INFERENCE_MARKET_ADDRESS=0xYourInferenceMarketAddress

# Compute Node Wallet
PRIVATE_KEY=your_compute_node_private_key_here
NODE_ADDRESS=your_compute_node_address

# API Configuration
PORT=3001
HOST=localhost

# Polling Configuration
POLL_INTERVAL=5000
MAX_CONCURRENT_REQUESTS=5

# AI Model Configuration
MODEL_PATH=./models/spam_detector
MODEL_CACHE_SIZE=3
INFERENCE_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/compute-node.log

# Optional: IPFS Configuration
IPFS_GATEWAY=https://gateway.pinata.cloud
IPFS_API_KEY=your_ipfs_api_key

# Gas Configuration
GAS_LIMIT=500000
GAS_PRICE=35